<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/edt_Image_Detail"
                android:layout_marginBottom="18dp"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:src="@drawable/add_image"/>
            <TextView
                android:id="@+id/tv_id_film"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID FILM"
                android:fontFamily="@font/fontbold"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_uri_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="URI Image"
                android:fontFamily="@font/fontbold"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/edt_Name_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/fontregular"
                android:inputType="textCapSentences"
                android:hint="Judul Film"
                android:padding="14dp"
                android:textColorHint="@color/grey"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edt_date_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/fontregular"
                android:layout_marginTop="14dp"
                android:hint="Tanggal Rilis"
                android:inputType="textCapSentences"
                android:padding="14dp"
                android:textColorHint="@color/grey"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edt_Author_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/fontregular"
                android:layout_marginTop="14dp"
                android:hint="Author Name"
                android:inputType="textCapSentences"
                android:padding="14dp"
                android:textColorHint="@color/grey"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_Desc_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/fontregular"
                android:hint="Deskripsi Film"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="4"
                android:gravity="top|left"
                android:padding="14dp"
                android:textColorHint="@color/grey"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_Tag_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/fontregular"
                android:layout_marginTop="14dp"
                android:hint="Genre"
                android:inputType="textCapSentences"
                android:padding="14dp"
                android:textColorHint="@color/grey"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edt_Rating_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/fontregular"
                android:layout_marginTop="14dp"
                android:hint="Rating"
                android:inputType="phone"
                android:padding="14dp"
                android:textColorHint="@color/grey"
                android:textSize="16sp" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/fontbold"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:visibility="visible"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/fontbold"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:visibility="visible"
            />
    </LinearLayout>

    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>